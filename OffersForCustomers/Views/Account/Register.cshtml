    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script>
        let lastInputEvent = null;

        // Track clicks
        document.addEventListener('click', (e) => {
            lastInputEvent = e;
        }, true);

        // Track Enter key
        document.addEventListener('keydown', (e) => {
            if (e.key === 'Enter') {
                lastInputEvent = e;
            }
        }, true);
    </script>

    <script>
        var objCommon = new Common();
        $(document).ready(function () {
            var app = new Vue({
                el: '#registerapp',
                data: {
                    Email: "",
                    Password: "",
                    ConfirmPassword: ""
                },
                methods: {
                    register($event) {

                        if (!objCommon.Validate("#registerform"))
                            return;

                        if (this.Password !== this.ConfirmPassword) {
                            Swal.fire({
                                title: "Validation Error",
                                text: "Password and Confirm Password do not match.",
                                icon: "warning"
                            });
                            return;
                        }


                        var param = {
                            Email: this.Email,
                            Password: this.Password,
                            ConfirmPassword: this.Password
                        }


                        console.log(param);

                        objCommon.AjaxCall("/Account/register", JSON.stringify(param), "POST", true, function (response) {
                            if(response.success != false)
                            {
                            Swal.fire({
                                title: "Success!",
                                text: "You are logged in successfully!",
                                icon: "success"
                            });

                            window.location.href = '@Url.Action("Requests", "Payments")';
                            }
                            else{
                                    Swal.fire({
                                title: "register Failed!",
                                text: response.message,
                                icon: "error"
                            });
                            }
                                }, $event == null?"": $event.currentTarget);
                    },
                    async logout() {
                        // Logout logic can be implemented here
                    }
                }
            })
        })
    </script>

    <script>
