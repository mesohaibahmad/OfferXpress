<body class="hold-transition register-page">
    <div class="register-box" id="registerapp">
        <div class="register-logo">
            <img src="~/dist/img/kacnd-logo.png" style="width:250px" />
        </div>
        <!-- /.register-logo -->
        <div class="register-box-body">
            <p class="register-box-msg">Sign in to start your session</p>

            <form id="registerform">
                <!-- Prevent default form submission -->
                <div class="form-group has-feedback">
                    <input type="email" class="form-control" placeholder="Email" @@keyup.enter="register" v-model="Email">
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Password" @@keyup.enter="register" v-model="Password">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" class="form-control" placeholder="Confirm Password" @@keyup.enter="register" v-model="ConfirmPassword">
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-8">
                        <a href="@Url.Action("ForgotPassword", "Users")" style="cursor:pointer">Forgot my password</a>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <a href="@Url.Action("Login", "Account")" style="cursor:pointer">LogIn</a>
                    </div>

                    <!-- /.col -->
                </div>
                <div class="row">
                    <!-- /.col -->
                    <div class="col-xs-4">
                        <button type="submit" class="btn btn-primary btn-block btn-flat" v-on:click="register($event)">Register</button>
                    </div>

                    <!-- /.col -->
                </div>
            </form>

