 @using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@using OfferXpress.Models
@using OfferXpress.Services
@using OfferXpress.Controllers
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.AspNetCore.Mvc.Rendering

@inject IStringLocalizer<HomeController> Localizer
@inject IHttpContextAccessor HttpContextAccessor
@inject IOptions<RequestLocalizationOptions> LocOptions

@{
    string returnUrl = ViewContext.HttpContext.Request.Path + ViewContext.HttpContext.Request.QueryString;

    var requestCulture = HttpContextAccessor.HttpContext.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.DisplayName })
        .ToList();
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html" charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Data Search</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/plugins/datatables/dataTables.bootstrap.css">
    <link href="~/scripts/validationEngine.jquery.css" rel="stylesheet" />
    <link href="~/scripts/toastr.css" rel="stylesheet" />
    <link href="~/plugins/datepicker/datepicker3.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/dist/css/AdminLTE.css">
    <link rel="stylesheet" href="~/dist/css/skins/_all-skins.css">

    <style>
        .ddllanguage {
            margin-top: 10px;
        }

        .datatable a {
            cursor: pointer
        }

        .dataTables_empty {
            text-align: left
        }

        .mailbox-attachment-icon.has-img > img {
            height: 150px !important
        }

        .pagination > .active > a, .pagination > .active > a:focus, .pagination > .active > a:hover,
        .pagination > .active > span, .pagination > .active > span:focus, .pagination > .active > span:hover {
            background-color: #427730 !important;
            border-color: #427730 !important;
        }

        #confirmmodel {
            top: calc(50% - 200px) !important;
        }

        .list-group-item {
            padding: 5px 15px !important;
        }

        .urlanchor {
            width: 150px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body class="hold-transition skin-blue sidebar-mini show-sidebar-right">
    <div class="wrapper">
        <header class="main-header">
            <a class="logo">
                <img src="~/dist/img/kacnd-logo.png" width="120px" style="margin-top:-3px" />
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>

                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                          
                        <li class="nav-item">
                            @using (Html.BeginForm("SetLanguage", "home", FormMethod.Post))
                            {


                                <input type="hidden" id="returnUrl" name="returnUrl" value="@returnUrl" />

                                <select id="culture"
                                        name="culture"
                                        class="form-control ddllanguage"
                                        onchange="this.form.submit();"
                                        asp-for="@requestCulture.RequestCulture.UICulture.Name">

                                    @{
                                        if (cultureItems?.Count > 0)
                                        {
                                            foreach (var cl in cultureItems)
                                            {
                                                if (requestCulture.RequestCulture.UICulture.Name == cl.Value)
                                                {
                                                    <option value="@cl.Value" selected="selected">@cl.Text</option>
                                                }
                                                else
                                                {
                                                    <option value="@cl.Value">@cl.Text</option>
                                                }

                                            }
                                        }
                                    }

                                </select>

                            }
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/dist/img/default-150x150.png" class="img-circle" alt="User Image">
                    </div>
                    <div class="pull-left info">
                        <p>FirstName LastName</p>
                    </div>
                </div>

                <ul class="sidebar-menu" id="leftmenu">
                    <li class="header">@Localizer["MAINNAVIGATION"]</li>
                    <li class="treeview" id="lidashboard">
                        <a href="@Url.Action("Index","Home")">
                            <i class="fa fa-pie-chart"></i> <span>@Localizer["AddOffer"]</span>
                        </a>
                    </li>
                    <li class="treeview" id="offersLi">
                        <a href="@Url.Action("Index","OffersList")">
                            <i class="fa fa-users"></i> <span>@Localizer["OfferList"]</span>
                        </a>
                    </li>
                </ul>
            </section>
        </aside>

        <div class="content-wrapper">
            @RenderBody()
        </div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>@Localizer["Version"]</b> 2.3.12
            </div>
            <strong>@Localizer["Copyright"] &copy; 2024-2026</strong> @Localizer["Allrightsreserved"].
        </footer>

        <div class="control-sidebar-bg"></div>
    </div>

    <script src="~/plugins/jQuery/jquery-2.2.3.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/plugins/datepicker/bootstrap-datepicker.js"></script>
    <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="~/plugins/datatables/dataTables.bootstrap.min.js"></script>
    <script src="~/plugins/slimScroll/jquery.slimscroll.min.js"></script>
    <script src="~/plugins/daterangepicker/moment.js"></script>
    <script src="~/plugins/fastclick/fastclick.js"></script>
    <script src="~/plugins/chartjs/Chart.min.js"></script>
    <script src="~/scripts/jquery.validationEngine.js"></script>
    <script src="~/scripts/toastr.js"></script>
    <script src="~/scripts/jquery.validationEngine-en.js"></script>
    @{
        @if (requestCulture.RequestCulture.Culture.Name == "de-GR")
        {
            <script src="~/scripts/jquery.validationEngine-de.js"></script>
            <script>
                $(function () {
                    $("html").attr("lang", "de");
                    $("#validationForm").removeAttr("dir");
                    $(".datatable").removeAttr("dir");
                    $("#tableGlobal").removeAttr("dir");
                    $(".profiledetail").removeAttr("dir");

                    $("#validationForm").attr("lang", "de");
                    $(".datatable").attr("lang", "de");
                    $("#tableGlobal").attr("lang", "de");
                    $(".profiledetail").attr("lang", "de");
                })
            </script>
        }
        else if (requestCulture.RequestCulture.Culture.Name == "sl-Sl")
        {
            <script src="~/scripts/jquery.validationEngine-sl.js"></script>
            <script>
                $(function () {
                    $("html").attr("lang", "sl");
                    $("#validationForm").removeAttr("dir");
                    $(".datatable").removeAttr("dir");
                    $("#tableGlobal").removeAttr("dir");
                    $(".profiledetail").removeAttr("dir");

                    $("#validationForm").attr("lang", "sl");
                    $(".datatable").attr("lang", "sl");
                    $("#tableGlobal").attr("lang", "sl");
                    $(".profiledetail").attr("lang", "sl");
                })
            </script>
        }
        else if (requestCulture.RequestCulture.Culture.Name == "it-IT")
        {
            <script src="~/scripts/jquery.validationEngine-it.js"></script>
            <script>
                $(function () {
                    $("html").attr("lang", "it");
                    $("#validationForm").removeAttr("dir");
                    $(".datatable").removeAttr("dir");
                    $("#tableGlobal").removeAttr("dir");
                    $(".profiledetail").removeAttr("dir");

                    $("#validationForm").attr("lang", "it");
                    $(".datatable").attr("lang", "it");
                    $("#tableGlobal").attr("lang", "it");
                    $(".profiledetail").attr("lang", "it");
                })
            </script>
        }
        else
        {
            <script src="~/scripts/jquery.validationEngine-en.js"></script>
            <script>
                $(function () {
                    $("#validationForm").removeAttr("dir");
                    $(".datatable").removeAttr("dir");
                    $("#tableGlobal").removeAttr("dir");
                    $(".profiledetail").removeAttr("dir");
                })
            </script>
        }

    }



    <script src="~/dist/js/app.min.js"></script>
    <script src="~/dist/js/demo.js"></script>
    <script src="~/js/jquery.common.js"></script>
    <link href="~/bootstrap/bootstrap.fd.css" rel="stylesheet" />
    <script src="~/bootstrap/bootstrap.fd.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
    <script>
        $(function () {
            $("#example1").DataTable();
            $('#example2').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false
            });
        });



    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>